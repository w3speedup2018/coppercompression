{%- for block in section.blocks -%}
  <div id="shopify-section-{{- block.id }}">
    {%- case block.type -%}
      {%- when 'collection' -%}
        {%- render 'section-content-collection', itemType: block -%}
      {%- when 'feature-row' -%}
        {%- render 'section-content-feature-row', itemType: block -%}
      {%- when 'hero' -%}
        {%- render 'section-content-hero', itemType: block -%}
      {%- when 'rich-text' -%}
        {%- render 'section-content-rich-text', itemType: block -%}
      {%- when 'video' -%}
        {%- render 'section-content-video', itemType: block -%}
      {%- when 'feature-columns' -%}
        {%- render 'section-content-feature-columns', itemType: block -%}
      {%- when 'featured-media' -%}
        {%- render 'section-content-featured-media', itemType: block -%}
      {%- when 'form' -%}
        {%- render 'section-content-form', itemType: block -%}
      {%- when 'stripe' -%}
        {%- render 'section-content-stripe', itemType: block -%}
      {%- when 'image' -%}
        {%- render 'section-content-image', itemType: block -%}
      {%- when 'counter' -%}
        {%- render 'section-content-countdown-timer', itemType: block -%}
    {%- endcase -%}
  </div>
{%- endfor -%}
