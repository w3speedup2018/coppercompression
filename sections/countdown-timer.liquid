
{%- render 'section-content-countdown-timer', itemType: section -%}

{% schema %}
{
  "name": "Countdown Timer",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "countdown_id",
      "label": "Countdowm timer id"
    },
    {
      "type": "select",
      "id": "page_layout",
      "label": "Layout",
      "default": "wide",
      "options": [
        {
          "value": "wide",
          "label": "Wide"
        },
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "narrow",
          "label": "Narrow"
        },
        {
          "value": "slim",
          "label": "Slim"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "custom_sizes",
      "default": false,
      "label": "Use custom sizes on mobile"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile title size",
      "default": 40
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile subheading size",
      "default": 32
    },
    {
      "type": "range",
      "id": "time_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile time size",
      "default": 50
    },
    {
      "type": "range",
      "id": "legend_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile legend size",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Countdown Timer"
    }
  ]
}
{% endschema %}