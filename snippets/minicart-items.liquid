{% for item in cart.items %}
    <div class="minicart-item" data-variant-id="{{ item.variant_id }}" data-product-id="{{ item.product_id }}" data-index="{{ forloop.index }}">
    <div class="minicart-item__image-container">
        <div class="minicart-item__image-wrapper">
        <picture>
            <img
                src="{{ item.image | img_url: '100x' }}"
                srcset="{{ item.image | img_url: '100x' }} 1x, {{ item.image | img_url: '100x' }} 2x"
                alt=""
                class="minicart-item__image"
            >
        </picture>
        </div>
    </div>

    <div class="minicart-item__meta-wrapper">
        <header class="minicart-item__header">
        <h4 class="minicart-item__title">{{ item.product.title | remove: "Copper Compression "}}</h4>

        <button class="minicart-item__btn-remove" aria-label="Remove product">
            {% render 'icon-remove' %}
        </button>
        </header>

        <div class="minicart-item__options">
        {% for option in item.options_with_values %}
          {% unless option.value contains 'Default' %}
              <span class="minicart-item__option">{{ option.value }}</span>
          {% endunless %}
        {% endfor %}
        </div>

        {% assign t = 'icon-chevron-down-black.svg' | asset_url %}
        {% assign url = 'url(' | append: t | append: ')' %}

        <footer class="minicart-item__footer">
        <div class="minicart-item__quantity-wrapper">
            <div class="minicart-item__select-container">
                <select
                    name=""
                    id=""
                    class="js-minicart-item-quantity minicart-item__quantity"
                >
                    {% for i in (1..10) %}
                    {% assign step = i | minus: 1 %}
                    {% if step < item.variant.inventory_quantity %}
                        <option value="{{ i }}" {% if item.quantity == i %}selected{% endif %}>{{ i }}</option>
                    {% endif %}
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="minicart-item-price-wrapper">
            <span class="minicart-item-price">{{ item.price | money }}</span>
        </div>
        </footer>
    </div>
    </div>
{% endfor %}